			public function jocker():void{
				if(reponseText.text!=moitie(question[valeur_question_id][1])&&(reponseText.text!=entie(question[valeur_question_id][1]))){
					reponseText.text=moitie(question[valeur_question_id][1]);
					valeurPoint=1;
					nbreLettre.text=String(question[valeur_question_id][1].length-uint(moitie(question[valeur_question_id][1]).length));
				}else if((reponseText.text==entie(question[valeur_question_id][1]))){
					valider();
				}
				else{
					reponseText.text=entie(question[valeur_question_id][1]);
					valeurPoint=0;
					
					intervalIdentifier = setTimeout(valider, 1000)
					nbreLettre.text=String(0);
				}
			}
			
			public function moitie(str:String) : String {
				var firstChar:String = str.substr(0, 1);
				var restOfString:String = str.substr(1, (str.length-1)/2);
				
				return firstChar.toUpperCase()+restOfString;
			}
			
			public function entie(str:String) : String {
				var firstChar:String = str.substr(0, 1);
				var restOfString:String = str.substr(1, (str.length-1));
				
				return firstChar.toUpperCase()+restOfString;
			}
			
			private function onKeyUp(event:KeyboardEvent):void {
				if ( event.keyCode == 13 ) {
					valider();
				}else{
					if ( event.keyCode == 8) {
						nbreLettre.text=String((question[valeur_question_id][1].length-reponseText.text.length)+1);
					}else{
						if(((question[valeur_question_id][1].length-reponseText.text.length)-1)<=0){
							nbreLettre.text=String(0);
						}else{
							nbreLettre.text=String((question[valeur_question_id][1].length-reponseText.text.length)-1);
						}
					}
					
				}
			}
